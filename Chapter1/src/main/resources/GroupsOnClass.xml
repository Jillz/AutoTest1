                <include name="stu"></include>
            </run>
        </groups>
        <classes>
            <class name="com.course.testng.group.GroupsOnClass1"/>
            <class name="com.course.testng.group.GroupsOnClass2"/>
            <class name="com.course.testng.group.GroupsOnClass3"/>
        </classes>
    </test>
</suite>